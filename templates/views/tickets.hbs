<main class="container main-borders-top main-borders-bottom" id="main-tickets">
    <div class="row" id="tickets-first-section">
        <div class="col-12">
            <h2>Order Your Tickets With Ease</h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quas officia cumque beatae, alias rerum a eum repellendus accusantium recusandae.</p>
        </div>
    </div>
    <div class="row" id="tickets-second-section">
        <div class="col-12 px-0 px-lg-2">
            <form method="" action="" id="tickets-form">
                <div class="row forms-container">
                    <div class="col-12 col-lg-6 form-group">
                        <label for="events-multi-select">Select your event from the list:</label>
                        <select multiple class="form-control" id="events-multi-select">
                            <!-- EVENTS OPTION ITEMS ARE GENERATED HERE -->

                        </select>
                    </div>

                    <div class="col-12 col-lg-3 form-group">
                        <label for="tickets-quantity">How many tickets do you need?</label>
                        <select multiple class="form-control tickets-quantity" id="tickets-quantity">
                            <option selected="selected">1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                        </select>
                    </div>

                    <div class="col-12 col-lg-3" id="calculate-price-div">
                        <button class="btn btn-success d-block mx-auto" onclick="calcTicketsPrice()">Calculate Price</button>

                        <label for="calculated-price">Total: </label>
                        <input type="text" readonly id="calculated-price" size="20">
                    </div>
                </div>

                <button class="btn btn-primary btn-lg" type="submit" id="tickets-submit-button">Make Order</button>


            </form>
        </div>
    </div>
</main>
